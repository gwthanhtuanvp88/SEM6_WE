@model IEnumerable<ClaimReport.Models.Claim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Claim</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Student name
            </th>
            <th>
                Start report date
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.name)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Academyyear.startReportDate))
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>